<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> <%= title %>
      </h1>
      <%- include('./partials/messages.ejs') %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name"><%= nickname %> </label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="<%= placeholdNickname %> "
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="<%= placeholdEmail %> "
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password"><%= pass %> </label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="<%= placeholdPass %> "
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password_confirm"><%= confirmPass %> </label>
          <input
            type="password"
            id="password_confirm"
            name="password_confirm"
            class="form-control"
            placeholder="<%= placeholdConfirmPass %> "
            value="<%= typeof password_confirm != 'undefined' ? password_confirm : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          <%= btn %>
        </button>
      </form>
      <p class="lead mt-4">
        <%= loginRedirect %> <a href="/users/login"><%= login %> </a>
      </p>
    </div>
  </div>
</div>
